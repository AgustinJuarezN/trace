---
import SectionContainer from './SectionContainer.astro';
import ButtonGroup from './button/ButtonGroup.astro';
import { Icon } from 'astro-icon';
import { FloatingWhatsApp } from 'react-floating-whatsapp';
import ContactForm from '@/components/ContactForm.jsx';
import PageTitle from './PageTitle.astro';

const { footerNavData } = Astro.props;
const date = new Date();
const year = date.getFullYear();
---

<footer id="footer" class="bg-black-300">
	<SectionContainer class="footer--container wrap wrap-px relative z-10">
		<PageTitle class="text-center mx-auto pt-3" type="light">¿Cómo podemos ayudarte?</PageTitle>
		<!-- <span>¿Cómo podemos ayudarte?</span> -->
		<ContactForm client:load />
	</SectionContainer>

	{/* Footer Links */}
	<SectionContainer class="footer--container wrap wrap-px relative z-10">
		<div class="footer--content-container">
			<div class="footer-links mb-12 grid grid-cols-2 gap-8 md:mb-16 md:grid-cols-8 lg:grid-cols-12">
				<div class="col-span-6">
					<div class="footer-menu grid grid-cols-2 md:grid-cols-8 lg:grid-cols-12">
						{
							footerNavData.map((footerLinks) => (
								<div class="footer-menu--container col-span-1 md:col-span-4">
									<h3 class="font-bold text-base mb-2">{footerLinks.title}</h3>
									<ul class="footer-menu--list">
										{footerLinks.items.map((footerItem) => (
											<li class="footer-menu--list-item gap-2">
												<a
													class="mb-2 block w-auto font-medium transition-colors duration-300 hover:text-secondary-700"
													href={footerItem.href}
													target={footerItem.target}
												>
													{footerItem.label}
												</a>
											</li>
										))}
									</ul>
								</div>
							))
						}
					</div>
				</div>
			</div>
		</div>
	</SectionContainer>

	{/* Footer Credits */}
	<SectionContainer class="footer-credits relative z-10">
		<div class="wrap wrap-px py-6">
			<p class="my-0">
				Trace © {year}. Todos los derechos reservados.
			</p>
			<!-- <span class="float-right">
				<FloatingWhatsApp phoneNumber="573002222222" accountName="NutriTrack" />
			</span> -->
		</div>
	</SectionContainer>
	<div class="footer--background"></div>
</footer>
