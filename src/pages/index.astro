---
import Layout from '@/layouts/Layout.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import faqData from '@/data/faqData.json';
import Accordion from '@/components/Accordion.astro';
import HomeBanner from '@/components/HomeBanner.astro';
import BadgeGroup from '@/components/badge/BadgeGroup.astro';
import BadgeMessage from '@/components/badge/BadgeMessage.astro';
import PageTitle from '@/components/PageTitle.astro';
import BadgeIcon from '@/components/badge/BadgeIcon.astro';
import ContactForm from '@/components/ContactForm';
import WhatsappBubble from '@/components/WhatsappBubble.astro';
import { Image } from 'astro:assets';
---

<Layout
	title="Trace - El GPS para perros y gatos 🚀"
	description="Rastreador GPS para perros y gatos. ¡Mantén a tu mascota segura con Trace! 🐶🐱"
>
	<div class="main-wrapper bg-[#fffad2] relative z-10 pb-20 pt-16">
		<HomeBanner />
		<SectionContainer class="components--container grid gap-8 sm:gap-24">
			<SectionContainer id="features" class="features">
				<BadgeGroup alignment="center">
					<BadgeMessage>Características</BadgeMessage>
					<BadgeIcon icon="mdi:star-circle-outline" />
				</BadgeGroup>
				<Image src="/images/Web1.jpg" alt="Seguimiento en tiempo real" width={1800} height={1000} />
				<Image src="/images/Web2.jpg" alt="Alarma de baja bateria" width={1800} height={1000} />
				<Image src="/images/Web3.jpg" alt="Historial de seguimiento" width={1800} height={1000} />
				<Image src="/images/Web4.jpg" alt="Areas seguras" width={1800} height={1000} />
			</SectionContainer>

			<SectionContainer id="faq" class="faq">
				<BadgeGroup alignment="center">
					<BadgeMessage>FAQ</BadgeMessage>
				</BadgeGroup>
				<PageTitle class="text-center mx-auto" type="default">¿Tienes preguntas?</PageTitle>
				<Accordion accordionData={faqData} />
			</SectionContainer>

			<SectionContainer id="contact" class="faq">
				<PageTitle class="text-center mx-auto pt-3" type="light">¿Cómo podemos ayudarte?</PageTitle>
				<ContactForm client:load />
			</SectionContainer>
		</SectionContainer>
		<WhatsappBubble />
	</div>
</Layout>
